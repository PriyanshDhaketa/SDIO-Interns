<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nonveg1"
    android:orientation="vertical"
    android:id="@+id/registerLL"
    android:gravity="top"
    android:padding="10dp"
    tools:context=".register">

    <ImageView android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:layout_gravity="center"
        android:maxHeight="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/iconp"
        />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    android:text="Good Food Never Wait"/>


    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/Email"
        android:drawableLeft="@drawable/ic_email_black1_24dp"
        android:textSize="15dp"
        android:alpha=".5"
        android:textStyle="italic"
        android:textColor="#000000"
        android:paddingLeft="20dp"
        android:hint="Enter Your Email ID"
        android:background="@drawable/source1"
        android:inputType="textEmailAddress">
    </EditText>

    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/password"
        android:alpha=".5"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        android:hint="Enter Your Password"
        android:background="@drawable/source1"
        android:inputType="textPassword">
    </EditText>

    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/conpassword"
        android:alpha=".5"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        android:hint="Enter Your Confirm Password"
        android:background="@drawable/source1"
        android:inputType="textPassword">
    </EditText>

    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/mobile"
        android:alpha=".5"
        android:drawableLeft="@drawable/ic_phone_android_black1_24dp"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        android:hint="Enter Your Mobile No."
        android:background="@drawable/source1"
        android:inputType="phone">
    </EditText>
<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="I Accept the Term and Condition and privacy Policy"
    android:textColor="#FFFFFF"/>


    <Button
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/Submit"
        android:textAlignment="center"
        android:background="@drawable/source2"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:text="Sign Up">
    </Button>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Already Signed Up?"
    android:textColor="#FFFFFF"
    android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#C70039"
        android:onClick="login"
        android:layout_gravity="center"/>

</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:visibility="invisible"
        android:id="@+id/otpLL"
        android:padding="10dp"
        android:background="@drawable/nonveg1"
        tools:context=".otp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:layout_gravity="center"
            android:maxHeight="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/iconp"
            />

        <EditText
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/otp"
            android:paddingLeft="15dp"
            android:alpha=".5"
            android:textSize="15dp"
            android:hint="Enter Your OTP"
            android:background="@drawable/source1"
            android:inputType="number">
        </EditText>

        <Button
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:id="@+id/resend"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Resend"
            android:onClick="resend"
            android:textSize="15dp">
        </Button>

        <Button
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/verifyOTP"
            android:textAlignment="center"
            android:background="@drawable/source2"
            android:textColor="@android:color/white"
            android:text="Verify"
            android:textSize="15dp">
        </Button>

        <Button
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:background="@android:color/transparent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Back"
            android:textSize="15dp">
        </Button>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

